{
  "name": "nova-framework",
  "version": "2.0.0",
  "description": "Complete Business Application Framework inspired by Microsoft Dynamics 365 Business Central",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean": "node scripts/clean-build.js",
    "clean:full": "node scripts/clean-build.js && npm run clean:modules",
    "clean:modules": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -rf apps/*/node_modules",
    "bootstrap": "lerna bootstrap",
    "build": "npm run build:deps && npm run build:packages && npm run build:apps",
    "build:deps": "lerna run build --scope=@nova/core --scope=@nova/metadata --parallel",
    "build:packages": "lerna run build --scope=@nova/compiler --scope=@nova/orm --scope=@nova/security --scope=@nova/reporting --scope=@nova/integration --scope=@nova/ui --parallel",
    "build:apps": "lerna run build --scope=@nova-app/runtime --scope=@nova-app/studio --parallel",
    "rebuild": "npm run clean && npm run bootstrap && npm run build",
    "dev": "concurrently \"npm run dev:core\" \"npm run dev:metadata\" \"npm run dev:orm\" \"npm run dev:studio\"",
    "dev:core": "lerna run dev --scope=@nova/core",
    "dev:metadata": "lerna run dev --scope=@nova/metadata",
    "dev:orm": "lerna run dev --scope=@nova/orm",
    "dev:compiler": "lerna run dev --scope=@nova/compiler",
    "dev:runtime": "lerna run dev --scope=@nova-app/runtime",
    "dev:studio": "lerna run dev --scope=@nova-app/studio",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "lint": "eslint packages/* apps/* --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json}\"",
    "publish": "lerna publish",
    "docs": "typedoc --out docs packages/*/src",
    "db:migrate": "ts-node scripts/run-migrations.ts",
    "db:migrate:create": "ts-node scripts/run-migrations.ts create",
    "db:migrate:up": "ts-node scripts/run-migrations.ts migrate",
    "db:migrate:down": "ts-node scripts/run-migrations.ts rollback",
    "db:migrate:status": "ts-node scripts/run-migrations.ts status",
    "db:seed": "ts-node scripts/seed-data.ts",
    "db:seed:all": "ts-node scripts/seed-data.ts all",
    "db:seed:users": "ts-node scripts/seed-data.ts seed Users",
    "db:seed:roles": "ts-node scripts/seed-data.ts seed Roles Permissions",
    "db:seed:master": "ts-node scripts/seed-data.ts seed Companies Currencies Countries Languages",
    "db:seed:refresh": "ts-node scripts/seed-data.ts refresh",
    "db:seed:truncate": "ts-node scripts/seed-data.ts truncate",
    "db:backup": "ts-node scripts/backup-sqlserver.ts backup",
    "db:backup:all": "ts-node scripts/backup-sqlserver.ts backup:all",
    "db:backup:logs": "ts-node scripts/backup-sqlserver.ts backup:logs",
    "db:backup:diff": "ts-node scripts/backup-sqlserver.ts backup:diff",
    "db:backup:list": "ts-node scripts/backup-sqlserver.ts list",
    "db:backup:verify": "ts-node scripts/backup-sqlserver.ts verify",
    "db:backup:cleanup": "ts-node scripts/backup-sqlserver.ts cleanup",
    "db:restore": "ts-node scripts/restore-sqlserver.ts restore",
    "db:restore:latest": "ts-node scripts/restore-sqlserver.ts restore:latest",
    "db:restore:new": "ts-node scripts/restore-sqlserver.ts restore:new",
    "db:restore:pit": "ts-node scripts/restore-sqlserver.ts restore:pit",
    "db:restore:validate": "ts-node scripts/restore-sqlserver.ts validate",
    "db:restore:plan": "ts-node scripts/restore-sqlserver.ts plan",
    "db:restore:history": "ts-node scripts/restore-sqlserver.ts history",
    "db:drop": "ts-node scripts/drop-database.ts drop",
    "db:drop:all": "ts-node scripts/drop-database.ts drop:all",
    "db:drop:force": "ts-node scripts/drop-database.ts drop:force",
    "db:drop:clean": "ts-node scripts/drop-database.ts drop:clean",
    "db:drop:tenant": "ts-node scripts/drop-database.ts drop:tenant",
    "db:drop:tenants": "ts-node scripts/drop-database.ts drop:tenants",
    "db:drop:metadata": "ts-node scripts/drop-database.ts drop:metadata",
    "db:drop:companies": "ts-node scripts/drop-database.ts drop:companies",
    "db:drop:list": "ts-node scripts/drop-database.ts list",
    "db:drop:connections": "ts-node scripts/drop-database.ts connections",
    "db:setup": "ts-node scripts/sqlserver-setup.js",
    "db:init": "npm run db:setup && npm run db:migrate:up && npm run db:seed:all",
    "db:reset": "ts-node scripts/database-manager.ts reset",
    "db:clone": "ts-node scripts/database-manager.ts clone",
    "db:recreate": "npm run db:drop NOVA_DB -- --force && npm run db:setup && npm run db:migrate:up && npm run db:seed:all",
    "db:refresh": "npm run db:reset -- --backup --seed",
    "db:wipe": "npm run db:drop:all -- --force --cleanup",
    "db:repair": "ts-node scripts/database-repair.ts repair",
    "db:repair:check": "ts-node scripts/database-repair.ts check",
    "db:repair:health": "ts-node scripts/database-repair.ts health",
    "db:repair:quick": "ts-node scripts/database-repair.ts quick",
    "db:repair:full": "ts-node scripts/database-repair.ts full",
    "db:repair:orphans": "ts-node scripts/database-repair.ts repair --fix-orphaned",
    "db:repair:duplicates": "ts-node scripts/database-repair.ts repair --fix-duplicates",
    "db:repair:indexes": "ts-node scripts/database-repair.ts repair --rebuild-indexes",
    "db:repair:corruption": "ts-node scripts/database-repair.ts repair --fix-corruption --backup",
    "db:optimize": "ts-node scripts/database-optimize.ts",
    "db:optimize:all": "ts-node scripts/database-optimize.ts all",
    "db:optimize:quick": "ts-node scripts/database-optimize.ts quick",
    "db:optimize:statistics": "ts-node scripts/database-optimize.ts statistics",
    "db:optimize:indexes": "ts-node scripts/database-optimize.ts indexes",
    "db:optimize:cleanup": "ts-node scripts/database-optimize.ts cleanup",
    "db:optimize:orphans": "ts-node scripts/database-optimize.ts orphans",
    "db:optimize:shrink": "ts-node scripts/database-optimize.ts shrink",
    "db:optimize:settings": "ts-node scripts/database-optimize.ts settings",
    "db:optimize:recompile": "ts-node scripts/database-optimize.ts recompile",
    "db:export": "ts-node scripts/database-export.ts full",
    "db:export:schema": "ts-node scripts/database-export.ts schema",
    "db:export:data": "ts-node scripts/database-export.ts data",
    "db:import": "ts-node scripts/database-import.ts",
    "db:import:schema": "ts-node scripts/database-import.ts schema",
    "db:import:data": "ts-node scripts/database-import.ts data",
    "db:analyze": "ts-node scripts/database-analyze.ts",
    "db:migrate:reset": "ts-node scripts/migrate-reset.ts",
    "db:create-migration": "ts-node scripts/create-migration.ts"
  },
   "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lerna": "^7.4.2",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bullmq": "^4.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.0",
    "mssql": "^10.0.0",
    "tedious": "^16.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xml2js": "^0.6.0",
    "yaml": "^2.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "business-central",
    "al-language",
    "dynamics-365",
    "erp-framework"
  ],
  "author": "NOVA Framework Team",
  "license": "MIT"
}
